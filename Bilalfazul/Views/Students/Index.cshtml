@model IEnumerable<Student>

@{
    ViewData["Title"] = "Index";
}

<style>
    .styled-table {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
    }

        .styled-table th, .styled-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .styled-table th {
            background-color: #f2f2f2;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>

<h1 style="font-family: Arial, sans-serif; color: #333; margin-bottom: 20px;">Index</h1>

<p>
    <a asp-action="Create" style="background-color: #007bff; color: #fff; padding: 8px 16px; text-decoration: none; border-radius: 4px;">Create New</a>
</p>
<table class="styled-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Semester)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.Contact)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="text-decoration: none; margin-right: 8px;"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" style="text-decoration: none; margin-right: 8px;"><i class="fas fa-info-circle"></i> Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="text-decoration: none;"><i class="fas fa-trash-alt"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</table>